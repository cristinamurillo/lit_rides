<!DOCTYPE html>
<html>
  <head>
    <title>LitRides</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if @message %>
     <div class=“message”>
       <%= @message %>
     </div>
     <% end %>
     <% if @errors %>
     <ul class=“errors”>
       <% @errors.each do |error| %>
         <li>
           <%= error %>
         </li>
       <% end %>
     </ul>
     <% end %>
    </header>
    <%= yield %>
  </body>
</html>
