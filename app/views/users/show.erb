<div class = "container">
    <h1><%= @user.full_name %></h1>
    <hr>
    <div class = "row">
        <div class= "col-md-6">
            <div class ="portfolio-item d-block mx-auto">

                <h4><%= @user.age %> years old</h4>
                <% if @user.image_url != nil%>
                    <%= form_tag @user do %>
                    <%= image_tag @user.image_url %><br><br><br>
                    <% end%>
                <% end %>
                <h4>About Me:</h4>
                <p class ="lead"><%= @user.about_me %></p>

                <h4>Lit Ride:</h4> <p class ="lead"><%= @user.car_type %></p>

                <h4>Preferences:</h4>
                <ul>
                    <li><p class = "lead"> Smoker?
                    <% if @user.smoking %>
                        <%= "🚬 "%>
                        <% else %>
                        <%= "🙅‍"%></li>
                    <% end %></p>
                   <li> <p class = "lead"> Pets?
                    <% if @user.pets %>
                    <%= "🐶 "%>
                    <% else %>
                    <%= "💀"%>
                    <% end %></p></li>
                    <li><p class = "lead"> How Lit?
                    <% case @user.engagement %>
                    <% when 1 %>
                    <%= "🔥"%>
                    <% when 2 %>
                    <%= "🔥🔥"%>
                    <% when 3 %>
                    <%= "🔥🔥🔥"%>
                    <% end %></p></li>
                </ul>
            </div>
        </div>
        <div class = "row">
            <div class ="portfolio-item d-block mx-auto">
                <% unless @user.upcoming_drives.empty? %>

                <h4> Upcoming Drives </h4>
                <% @user.upcoming_drives.each do |ride| %>
                    <%= render partial: '/users/rides', :locals => {:ride => ride} %>
                <% end %>

                <% end%>
            </div>
        </div>
    </div>
    <hr>

    <h2> Reviews </h2>
    <% unless @user.reviews.empty?%>
    <ul>
        <% @user.reviews.each do |review|%>
        <li>
        <p class ="lead"><%= link_to review.title, review %> <br>Rating:
            <% case review.rating%>
            <% when 1%>
                <%= "💩 "%>
            <% when 2%>
                <%= "😷😷" %>
            <% when 3%>
                <%= "😐😐😐" %>
            <% when 4%>
                <%= "💁💁💁💁" %>
            <% when 5%>
                <%= "💃💃💃💃💃" %>
            <% end%>

        <% end%></p>
        </li>
   </ul>
    <% else%>
        <h6><%= "No Reviews Yet" %></h6>
    <% end%>
    <br><br><br>

</div>
