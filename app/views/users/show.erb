<h1><%= @user.full_name %></h1>
<h2><%= @user.age %> years old</h2>

<h2>About Me:</h2>
<p><%= @user.about_me %></p>

<h2>Lit Ride: <%= @user.car_type %></h2>

<h2>Preferences:</h2>
<p> Smoker?
<% if @user.smoking %>
    <%= "🚬 "%>
    <% else %>
    <%= "🙅‍♀️"%>
<% end %></p>
<p> Pets?
<% if @user.pets %>
  <%= "🐶 "%>
  <% else %>
  <%= "💀"%>
<% end %></p>
<p> How Lit?:
<% case @user.engagement %>
  <% when 1 %>
  <%= "🔥"%>
  <% when 2 %>
  <%= "🔥🔥"%>
  <% when 3 %>
  <%= "🔥🔥🔥"%>
<% end %></p>

<% unless @user.upcoming_drives.empty? %>
  <h2> Upcoming Drives </h2>
  <% @user.upcoming_drives.each do |ride| %>
      <%= render partial: '/users/rides', :locals => {:ride => ride} %>
  <% end %>
<% end%>

<hr>

<h2> Reviews </h2>
<% @user.reviews.each do |review|%>
<ul>
  <%= link_to review.title, review %> Rating:
  <% case review.rating%>
  <% when 1%>
     <h2> <%= "💩 "%></h2>
  <% when 2%>
      <h2><%= "😷😷" %></h2>
  <% when 3%>
      <h2><%= "😐😐😐" %></h2>
  <% when 4%>
      <h2><%= "💁💁💁💁" %></h2>
  <% when 5%>
      <h2><%= "💃💃💃💃💃" %></h2>
  <% end%>
</ul>
<% end%>
